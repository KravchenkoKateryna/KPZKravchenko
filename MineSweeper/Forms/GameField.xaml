<Window x:Class="MineSweeper.GameField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        x:Name="window"
        Title="GameField" Height="450" MinWidth="250" Width="800" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Label x:Name="timerLbl" Content="00:00" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Background="Black" Foreground="Red" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <Button x:Name="restartBtn" Content="😀" HorizontalAlignment="Center" Margin="0,3,0,0" VerticalAlignment="Top" Click="restartBtn_Click"/>
        <Label x:Name="minesLbl" Content="00" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Background="Black" Foreground="Red" FontWeight="Bold" FontSize="14" Width="44" HorizontalContentAlignment="Center"/>
        <Grid x:Name="bombContainerGrd" Background="#FF9A9A9A" Margin="2,50,2,2" ShowGridLines="False" />
        <Button x:Name="newGameBtn" Content="NewGame" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Click="newGameBtn_Click"/>
        <Button x:Name="showScoresBtn" Content="🏆" Margin="0,16,59,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="20" Click="showScoresBtn_Click"/>
    </Grid>
</Window>
