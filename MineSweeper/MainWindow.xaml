<Window x:Class="MineSweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Select the level of new game." HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top"/>
        <Button x:Name="EasyLevelBtn" Content="Easy" HorizontalAlignment="Left" Margin="41,67,0,0" VerticalAlignment="Top" Width="79" Click="EasyLevelBtn_Click"/>
        <Button x:Name="MediumLevelBtn" Content="Medium" HorizontalAlignment="Center" VerticalAlignment="Top" Width="80" Margin="0,67,0,0" Click="MediumLevelBtn_Click"/>
        <Button x:Name="HardLevelBtn" Content="Hard" HorizontalAlignment="Left" Margin="281,67,0,0" VerticalAlignment="Top" Width="79" Click="HardLevelBtn_Click"/>

    </Grid>
</Window>
